<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="mapper.goods">

 	<select id="selectGoodsList" resultType="goods">
 		<![CDATA[
         select * from goods
      	]]>
 	</select>

 	<select id="selectGoods" parameterType="String" resultType="goods">
 		<![CDATA[
         select * from goods where gCode = #{gCode}
      	]]>
 	</select>
 	
 	<insert id="insertCart" parameterType="cart">
 		<![CDATA[
         insert into cart value(num=#{num}, userid=#{userid}, gCode=#{gCode}, gName=#{gName},
					gPrice=#{gPrice}, gSize=#{gSize}, gColor=#{gColor}, gAmount=#{gAmount}, gImage=#{gImage})
      	]]>
 	</insert>
 	
 </mapper>